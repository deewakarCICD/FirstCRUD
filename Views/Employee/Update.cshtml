@model Employee

@{
    ViewData["Title"] = "Update Employee";
}

<h2>Update</h2>
<form method="post">
    <p>
        <label asp-for="Name">Employee Name:</label>
        <input asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </p>

    <p>
        <label asp-for="Age">Employee Age:</label>
        <input asp-for="Age" value="@Model.Age" />
        <span asp-validation-for="Age"></span>
    </p>

    <p>
        <label asp-for="Department">Employee Department:</label>
        <select asp-for="Department">
            <option value="Development">Development</option>
            <option value="HR">HR</option>
            <option value="Research">Research</option>
        </select>
    </p>

    <p>
        <label asp-for="Salary">Employee Salary:</label>
        <input asp-for="Salary" value="@Model.Salary" />
        <span asp-validation-for="Salary"></span>
    </p>

    <p>
        <label asp-for="Sex">Employee Sex:</label>
        <input asp-for="Sex" value="@Model.Sex" />
        <span asp-validation-for="Sex"></span>
    </p>
    <p><button type="submit">Submit</button></p>
</form>